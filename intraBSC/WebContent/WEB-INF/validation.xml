<!-- *************************************** Configuracao do PRO ***************************************** -->

		<form name="configTarefaForm">
			<field
				property="textoConfigTarefa"		
				depends="required, mask">
				<arg0
					key="pro.label.nome" />
				<msg name="mask"
					key="pro.errorValidacao.espacosBrancos" />
				<msg name="maxlength"
					key="pro.errorValidacao.maior" />
				<var>
					<var-name>mask</var-name>
					<var-value>[^ ][a-zA-Z0-9]</var-value>
				</var>
			</field>
			<field
				property="numDiasPrevistos"
				depends="required, integer, minlength, mask, intRange">
				<arg0 key="pro.label.numDiasPrevistos" />
				<arg1 name="intRange" key="${var:min}" resource="false"/>
				<arg2 name="intRange" key="${var:max}" resource="false"/>

				<msg name="integer"	key="pro.errorValidacao.numDiasPrevistos" />
				<msg name="minlength" key="pro.errorValidacao.minNumDiasPrevistos" />
				<msg name="mask" key="pro.erro.configTarefa.campoNumericoDiasPrevistos" />
				<msg name="intRange" key="pro.validacao.configTarefa.campoNumericoDiasPrevistos" />

				<var>
					<var-name>minlength</var-name>
					<var-value>1</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>[1-9]</var-value>
				</var>
				<var>
					<var-name>min</var-name>
				    <var-value>1</var-value>
				</var>
				<var>
				    <var-name>max</var-name>
				    <var-value>999</var-value>
				</var>
			</field>
			<field
				property="idResponsavel"
				depends="required">
				<arg0 key="pro.label.responsavel" />
			</field>
		</form>


